{
  "name": "messenger-simulator-electron",
  "version": "1.0.0",
  "description": "Electron wrapper cho Messenger Simulator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "electron": "^27.1.3"
  },
  "devDependencies": {
    "electron-builder": "^24.8.1"
  },
  "build": {
    "appId": "com.httt.messenger-simulator",
    "productName": "Messenger Simulator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "electron",
    "messenger",
    "simulator",
    "networking"
  ],
  "author": "HTTT Project",
  "license": "MIT"
}
